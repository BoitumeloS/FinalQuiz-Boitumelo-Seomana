<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shapequiz" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingBottom="24dp"
                    android:text="select  the correct shape name "
                    android:textColor="#ba2323"
                    android:textSize="24sp" />

              <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Quiz1"
                        android:textAllCaps="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle" />
                    </RelativeLayout>
                    <RadioGroup
                        android:id="@+id/answer_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/triangle_1_false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Triangle" />

                        <RadioButton
                            android:id="@+id/circle_1_true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Circle" />

                    </RadioGroup>
              </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#da2ef606" />
              <LinearLayout
                    android:id="@+id/q2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Quiz2"
                        android:textAllCaps="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/diamon" />
                    </RelativeLayout>


                    <RadioGroup
                        android:id="@+id/answer_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/diamond_true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diamond" />

                        <RadioButton
                            android:id="@+id/star_false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Star" />

                    </RadioGroup>

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/darker_gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#daeba117" />
                <LinearLayout
                    android:id="@+id/q3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Quiz3"
                        android:textAllCaps="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rectangle" />
                    </RelativeLayout>



                    <RadioGroup
                        android:id="@+id/answer_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/rectangle_true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rectangle" />

                        <RadioButton
                            android:id="@+id/square_false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Square" />

                    </RadioGroup>

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/darker_gray" />

            </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#dada2e25" />
                <LinearLayout
                    android:id="@+id/q4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Quiz 4"
                        android:textAllCaps="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/star" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/question_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <RadioGroup
                        android:id="@+id/answer_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/star_true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Star" />

                        <RadioButton
                            android:id="@+id/rectangle_false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rectangle" />

                    </RadioGroup>

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/darker_gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                android:background="#da29e9b0" />
                <LinearLayout
                    android:id="@+id/q5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Quiz5"
                        android:textAllCaps="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/heartshape" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/question_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <RadioGroup
                        android:id="@+id/answer_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/triangle_false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Triangle" />

                        <RadioButton
                            android:id="@+id/heart_true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart" />

                    </RadioGroup>

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/darker_gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                android:background="#f5d713" />
                <LinearLayout
                    android:id="@+id/q6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Quiz6"
                        android:textAllCaps="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/triangle" />
                    </RelativeLayout>



                    <RadioGroup
                        android:id="@+id/answer_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/triangle_true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Triangle" />

                        <RadioButton
                            android:id="@+id/rectangle_1_false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rectangle" />

                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                android:background="#da2eb939" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingBottom="24dp"
                        android:paddingTop="24dp"
                        android:text="Enter your name :"
                        android:textColor="#daf606f6"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/name_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="NAME"
                        android:inputType="textCapWords"
                        android:text="" />

                    <TextView
                        android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingTop="24dp"

                        android:text="@string/age_group"
                        android:textColor="#daf606f6"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/age_group6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="6-7" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/age_group8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="8-9" />
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnQuiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"/>

                    <Button
                        android:id="@+id/restart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="Restart"
                        android:text="Play Again"
                        />
                    <Button
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:onClick="ShareResults"
                        android:text="Share" />

            </LinearLayout>




            </LinearLayout>
            </LinearLayout>

</ScrollView>